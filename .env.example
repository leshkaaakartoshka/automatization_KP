# CPQ System Environment Configuration

# Telegram Configuration
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_MANAGER_CHAT_ID=your_telegram_chat_id_here

# Lookup Configuration
LOOKUP_SOURCE=mock  # Options: mock, sheets, postgres
LOOKUP_POLICY=strict  # Options: strict, fallback

# Google Sheets Configuration (if using sheets)
SHEETS_ID=your_google_sheets_id_here
SHEETS_TAB=QuoteCatalog

# PostgreSQL Configuration (if using postgres)
DB_DSN=postgresql://cpq_user:cpq_password@postgres:5432/cpq_db

# PDF Storage Configuration
PDF_STORAGE=local  # Options: local, s3
PDF_DIR=pdf

# S3 Configuration (if using s3)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=your-bucket-name
S3_KEY=your-access-key
S3_SECRET=your-secret-key

# Application Configuration
BASE_URL=http://localhost:8000
HASH_SALT=your_random_salt_here

# Logging
LOG_LEVEL=INFO
